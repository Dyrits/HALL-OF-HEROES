<h1>Create a Squad</h1>
<a href="javascript:history.back()">Go back</a><br>

<form action="create-squad" method="post" autocomplete="off">

    <div class="align-input-container">
        <div class="input-group align-input">
            <label>Name</label>
            <input type="text" name="name" required>
        </div>

        <div class="input-group align-input">
            <label>Headquarter Location*</label>
            <input type="text" name="headquarter">
        </div>
    </div>

    <input type="submit" value="Create A Squad">
</form>

